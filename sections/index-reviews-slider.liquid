<section class="index-section section_reviews-slider container">

    {{ 'section-reviews.css' | asset_url | stylesheet_tag }}
    
    <h2 class="section-header">
        {{ section.settings.title }}
    </h2>
    
    <div class="section_reviews_carousel reviews-carousel" data-section="{{ section.id }}">
        <div class="swiper-wrapper">
            {%- for block in section.blocks -%}
                {%- liquid
                    assign block_image = block.settings.image 
                    assign block_star = block.settings.star
                    assign block_title = block.settings.title
                    assign block_text = block.settings.text
                    assign block_name = block.settings.name
                    assign block_product = all_products[block.settings.product]
                -%}

                <div class="reviews-carousel_item swiper-slide">
                    <div class="reviews-carousel_item_wrapper">
                        <img 
                            class="review-image" 
                            src="{{ block_image | img_url: '140x140' }}" 
                            alt="{{ block_image.alt }}"
                            width="140"
                            height="140">

                        <div class="reviews-carousel_item_stars">
                            {%- for i in (1..5) -%}
                                {%- if block_star >= i -%}
                                    <svg width="26" height="24" viewBox="0 0 26 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12.0489 0.927052C12.3483 0.00574112 13.6517 0.00573993 13.9511 0.927051L16.1432 7.67376C16.2771 8.08578 16.661 8.36475 17.0943 8.36475H24.1882C25.1569 8.36475 25.5597 9.60436 24.7759 10.1738L19.0369 14.3435C18.6864 14.5981 18.5397 15.0495 18.6736 15.4615L20.8657 22.2082C21.1651 23.1295 20.1106 23.8956 19.3269 23.3262L13.5878 19.1565C13.2373 18.9019 12.7627 18.9019 12.4122 19.1565L6.67312 23.3262C5.88941 23.8956 4.83493 23.1295 5.13428 22.2082L7.32642 15.4615C7.46029 15.0495 7.31363 14.5981 6.96315 14.3435L1.22405 10.1738C0.440337 9.60436 0.843112 8.36475 1.81184 8.36475H8.90575C9.33897 8.36475 9.72293 8.08578 9.8568 7.67376L12.0489 0.927052Z" fill="#00AFA9"/>
                                    </svg>  
                                {%- else -%}
                                    <svg width="26" height="24" viewBox="0 0 26 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12.0489 0.927052C12.3483 0.00574112 13.6517 0.00573993 13.9511 0.927051L16.1432 7.67376C16.2771 8.08578 16.661 8.36475 17.0943 8.36475H24.1882C25.1569 8.36475 25.5597 9.60436 24.7759 10.1738L19.0369 14.3435C18.6864 14.5981 18.5397 15.0495 18.6736 15.4615L20.8657 22.2082C21.1651 23.1295 20.1106 23.8956 19.3269 23.3262L13.5878 19.1565C13.2373 18.9019 12.7627 18.9019 12.4122 19.1565L6.67312 23.3262C5.88941 23.8956 4.83493 23.1295 5.13428 22.2082L7.32642 15.4615C7.46029 15.0495 7.31363 14.5981 6.96315 14.3435L1.22405 10.1738C0.440337 9.60436 0.843112 8.36475 1.81184 8.36475H8.90575C9.33897 8.36475 9.72293 8.08578 9.8568 7.67376L12.0489 0.927052Z" stroke="#00AFA9"/>
                                    </svg>
                                {%- endif -%}
                            {%- endfor -%}
                        </div>

                        <h4 class="reviews-carousel_item_title">{{ block_title }}</h4>

                        <div class="reviews-carousel_item_text">{{ block_text }}</div>

                        <h5 class="reviews-carousel_item_name">{{ block_name }}</h5>

                        <a href="{{ block_product.url }}" class="reviews-carousel_product_link">
                            <img src="{{ block_product.featured_image | img_url: '92x70', crop: 'center' }}" alt="{{ block_product.featured_image.alt }}">

                            <span class="reviews-carousel_product_title">{{ block_product.title }}</span>

                            <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22.7071 8.70711C23.0976 8.31658 23.0976 7.68342 22.7071 7.29289L16.3431 0.928932C15.9526 0.538408 15.3195 0.538408 14.9289 0.928932C14.5384 1.31946 14.5384 1.95262 14.9289 2.34315L20.5858 8L14.9289 13.6569C14.5384 14.0474 14.5384 14.6805 14.9289 15.0711C15.3195 15.4616 15.9526 15.4616 16.3431 15.0711L22.7071 8.70711ZM0 9H22V7H0V9Z" fill="white"/>
                            </svg>
                        </a>
                    </div>
                </div>
            {%- endfor -%}
        </div>
        
        <div class="swiper-pagination swiper-pagination_{{ section.id }}"></div>
        
    </div>
        
    <div class="swiper-button-prev swiper-button-prev_{{ section.id }}"></div>
    <div class="swiper-button-next swiper-button-next_{{ section.id }}"></div>

</section>

<script src="{{ 'reviews-carousel.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Reviews slider",
  "tag": "section",
  "class": "section",
  "settings": [
        {
            "type": "richtext",
            "id": "title",
            "label": "Title"
        }
    ],
    "blocks": [
        {
            "type": "review",
            "name": "Review",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Person photo"
                },
                {
                    "type": "range",
                    "id": "star",
                    "min": 1,
                    "max": 5,
                    "step": 1,
                    "label": "Star rating",
                    "default": 5
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name"
                },
                {
                    "type": "product",
                    "id": "product",
                    "label": "Link to product"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Reviews slider",
            "blocks": []
        }
    ]
}
{% endschema %}

